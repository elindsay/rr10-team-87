<%= semantic_form_for @user do |form| %>
  <%= form.inputs do %>
    <%= form.input :secret_code %>
    <%= form.input :dob, :start_year => Date.today.year-55, :end_year => Date.today.year-17 %>
    <%= form.input :name %>
    <%= form.input :description %>
    <fieldset>
      <legend>Gender</legend>
      <%= form.input :male %>
      <%= form.input :female %>
      <%= form.input :other %>
    </fieldset>
    <fieldset>
      <legend>Looking For</legend>
      <%= form.input :looking_for_minimum_age %>
      <%= form.input :looking_for_maximum_age %>
      <%= form.input :looking_for_female %>
      <%= form.input :looking_for_male %>
      <%= form.input :looking_for_other%>
    </fieldset>
  <% end %>

  <%= form.buttons do %>
    <%= form.commit_button 'Get in there' %>
  <% end %>
<% end %>
