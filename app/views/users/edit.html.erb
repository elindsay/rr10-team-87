<%= semantic_form_for @user do |form| %>
  <%= form.inputs do %>
    <%= form.input :secret_code %>
    <%= form.input :name, :label => 'First name' %>
    <%= form.input :description, :label => 'How would someone recognize you?' %>
    <%= form.input :dob, :start_year => Date.today.year-55, :end_year => Date.today.year-17, :label => "Your birthday" %>
    <fieldset>
      <legend>Your gender</legend>
      <%= form.input :male %>
      <%= form.input :female %>
      <%= form.input :other %>
    </fieldset>
    <fieldset id="looking_for">
      <legend>Who are you looking for?</legend>
      <%= form.input :looking_for_minimum_age, :collection => (18..55).map, :as => :select, :label => 'Minimum age' %>
      <%= form.input :looking_for_maximum_age, :collection => (18..55).map, :as => :select, :label => 'Maximum age' %>
      <%= form.input :looking_for_female, :label => "Female" %>
      <%= form.input :looking_for_male, :label => "Male" %>
      <%= form.input :looking_for_other, :label => "Other" %>
    </fieldset>
  <% end %>

  <%= form.buttons do %>
    <%= form.commit_button 'Right this way' %>
  <% end %>
<% end %>
