<div id="decide" class="clearfix">
  <h2>Can I have your phone number?</h2>

  <div id="button_box" class="clearfix">
    <p id="yes" class="button"><a href="#">Yes</a></p>
    <p id="no" class="button"><a href="/pages/how-does-this-work">Why?</a></p>
  </div>
</div>

<%= semantic_form_for @user do |form| %>
  <%= form.semantic_errors %>
  <%= form.inputs do %>
    <%= form.input :phone_number, :label => "Sweet, let&rsquo;s do this.", :hint => "I&rsquo;ll text you a secret code to verify your identity." %>
  <% end %>

  <%= form.buttons do %>
    <%= form.commit_button 'Sign up', :label => 'Text me' %>
  <% end %>
<% end %>